@model TaskManager.Models.Projects.ProjectsCreateViewModel

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new project</h2>
<p>Fill in the details below to create a new project.</p>
<hr/>
<form class="form">
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button><button type="reset" class="btn btn-default">Reset</button>
    </div>
</form>

